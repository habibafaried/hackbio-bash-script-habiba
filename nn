# --- Basic integrity check for each gzip ---
echo "[INFO] Validating gzip filesâ€¦"
for f in raw_fastq/*.fastq.gz; do
  gunzip -t "$f" || { echo "[ERROR] Corrupt file: $f"; exit 1; }
done

echo "[DONE] All FASTQs downloaded to raw_fastq/"


