mkdir datasets && cd datasets
mkdir raw_reads Qc_reports
ls
cd raw_reads
nano scriptrawdata.sh
cd datasets
cd raw_reads
bash scriptrawdata.sh.save
fastqc raw_reads/ *.fastq.gz -o Qc_reports
multiqc Qc_reports/
conda install -c bioconda fastp
nano trim.sh
#!/bin/bash in side nano trim.sh
mkdir qc_reads
SAMPLES=(
  "ACBarrie"
  "Alsen"
  "Baxter"
  "Chara"
  "Drysdale"

for SAMPLE in "${SAMPLES[@]}"; do
  fastp \

    -i "$PWD/${SAMPLE}_R1.fastq.gz" \
    -I "$PWD/${SAMPLE}_R2.fastq.gz" \
    -o "qc_reads/${SAMPLE}_R1.fastq.gz" \
    -O "qc_reads/${SAMPLE}_R2.fastq.gz" \
    --html "qc_reads/${SAMPLE}_fastp.html" 
done
cp trim.sh.save raw_reads
cd raw_reads
bash trim.sh
mv qc_reads/ trimmed_reads && cd trimmed_reads
ls







